<% provide(:title, "Login") %>

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<div class="login100-form-title" style="background-image: url(/bg-09.jpg);">
				<span class="login100-form-title-1">
					Sign in
				</span>
			</div>

			<%= form_for(resource, :html => { :class => 'login100-form validates-form', novalidate: :true }, as: resource_name, url: session_path(resource_name)) do |f| %>

				<%= content_tag(:div, flash[:error], :id => "error_explanation") if flash[:error] %>
				<%# content_tag(:div, flash[:notice], :id => "error_explanation") if flash[:notice] %>
				<%= content_tag(:div, flash[:alert], :id => "error_explanation") if flash[:alert] %>
  
				<div class="field wrap-input100 validate-input m-b-26" data-validate="Email is required">
					<span class="label-input100">Email</span>
    			<%= f.email_field :email,  class: "input100", placeholder: "Enter email"%>
					<span class="focus-input100"></span>
  			</div>

  			<div class="field wrap-input100 validate-input m-b-18" data-validate="Password is required">
  				<span class="label-input100">Password</span>
    			<%= f.password_field :password, class: "input100", placeholder: "Enter password" %>
					<span class="focus-input100"></span>
  			</div>

  			<% if devise_mapping.rememberable? -%>
    			<div class="flex-sb-m w-full p-b-30">
						<div class="contact100-form-checkbox">

      				<%# f.check_box :remember_me, class: "input-checkbox100", id: "ckb1" %>
							<input class="input-checkbox100" id="ckb1" type="checkbox" name="user[remember_me]">
							<label class="label-checkbox100" for="ckb1">
								Remember me
							</label>
    				</div>
					<% end -%>
					<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>

						<div>
							<%= link_to "Forgot your password?", new_password_path(resource_name), class: "txt1" %>
	<!--
							<a href="#" class="txt1">
								Forgot Password?
							</a>
	-->
						</div>
					<% end -%>
					</div>	

  			<div class="actions container-login100-form-btn">
    			<%= f.submit "Log in", class: "login100-form-btn" %>
  			</div>
				<div id="signup-login-div">
					<span id="signup-login-span">New user? <%= link_to "Sign up now!", new_registration_path(resource_name), id: "signup-login-link" %></span>
				</div>

			<% end %>
		</div>
	</div>
</div>	

<%# render "devise/shared/links" %>
