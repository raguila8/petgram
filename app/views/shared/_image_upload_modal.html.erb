<div class="modal fade in" id="image-upload-modal" role="dialog">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title"> Upload Image </h4>
			</div>
			<div class="modal-body">
				<%= form_for Post.new, html: {multipart: true, class: "login101-form"}, :remote => true do |f| %>
					<div class="field">
						<label class="file-btn">
							<span class="glyphicon glyphicon-camera"></span>
							<%= f.file_field :image, class: "img-file"%>
							</label>
					</div>
					<div class="upload-preview">
						<img class= "img-responsive100" id="cropbox"/>
					</div>

					<div class="field">
						<label>Caption</label>
						<%= f.text_area :description, placeholder: "Write a cation..." %>
					</div>

					<div class="actions">
						<%= f.submit class: "login100-form-btn login101-form-btn"  %>
					</div>
				<% end %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
